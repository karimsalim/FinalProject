                @Html.EditorFor(model => model.CurrentEmployee.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CurrentEmployee.LastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CurrentEmployee.DateOfBirth, htmlAttributes: new { @class = "control-label col-md-2" })
